{
  "compilerOptions": {
    "target": "es6", // or a more recent ecmascript version
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "CommonJS",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*"],
  "exclude": ["**/*.spec.ts", "node_modules"]
}
